<h1>Live CHAT</h1>

<ul id="chat_room">
<% @chats.each do |c| %>
  <li><%= c.name %>: <%= c.message %></li>
<% end %>
</ul>

<%= form_tag chat_create_path, remote: true, id: :chat_form do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :message %>
  <%= text_field_tag :message %>
  <%= submit_tag 'Send' %>
<% end %>
